@model NewsPortal.Data.Model.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    @Html.HiddenFor(x =>x.ID)
                    <form role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Top Category</label>
                            @Html.DropDownListFor(model => model.ParentID, new SelectList(ViewBag.CategoryList, "ID", "CategoryName"), ("Select"), new { @class = "form-control", id = "ParentID" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Category Name</label>
                            @Html.TextAreaFor(x => x.CategoryName, new { @class = "form-control", id="categoryName", placeHolder = "Category Name" })
                        </div>
                        <div class="form-group">
                            <label for="categoryUrl">Category Url</label>
                            @Html.TextAreaFor(x => x.URL, new { @class = "form-control", id="categoryUrl", placeHolder = "URL" })
                        </div>
                        <div class="checkbox">
                            <label>
                                <input id="isActiveCategory" type="checkbox" checked> Is active?
                            </label>
                        </div>
                        <a href="#" class="btn btn-default" onclick="UpdateCategory()">Save</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
